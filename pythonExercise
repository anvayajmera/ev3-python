import random

def game():
    print("Welcome to the Exercise Game!")
    print("You have 3 tries to guess the number!")
    secret = random.randint(1, 10)
    tries = 0
    while tries < 3:
        guess = int(input("Enter your guess: "))
        if guess == secret:
            print("Correct!")
            break
        else:
            print("Wrong! Try again.")
        tries += 1
    print("Game Over! The secret number was", secret)

def instructions():
    print("Instructions: Guess the number between 1 and 10.")

def main_menu():
    print("1. Start Game")
    print("2. Instructions")
    print("3. Exit")

while True:
    main_menu()
    choice = int(input("Choose an option: "))
    if choice == 1:
        game()
    elif choice == 2:
        instructions()
    elif choice == 3:
        print("Exiting...")
        break
    else:
        print("Invalid option. Please try again.")
