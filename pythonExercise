import random

high_scores = []

def game():
    print("Welcome to the Enhanced Exercise Game!")
    print("You have 3 tries to guess the number!")
    secret = random.randint(1, 50)
    tries = 0
    score = 10
    hint_used = False
    while tries < 3:
        guess = int(input("Enter your guess: "))
        if guess == secret:
            print(f"Correct! You scored {score} points!")
            high_scores.append(score)
            break
        elif guess < secret:
            print("Too low! Try again.")
            score -= 2
        else:
            print("Too high! Try again.")
            score -= 2
        tries += 1

        if not hint_used and tries == 2:
            hint = input("Would you like a hint? (y/n): ")
            if hint.lower() == 'y':
                print(f"The number is {'even' if secret % 2 == 0 else 'odd'}.")
                hint_used = True

    if tries == 3:
        print(f"Game Over! The number was {secret}. Final Score: {score}")
    display_high_scores()

def display_high_scores():
    print("High Scores:")
    if not high_scores:
        print("No high scores yet!")
    else:
        for i, score in enumerate(sorted(high_scores, reverse=True)[:5]):
            print(f"{i + 1}. {score} points")

def instructions():
    print("Instructions: Guess the number between 1 and 50. Score points for correct guesses!")

def main_menu():
    print("1. Start Game")
    print("2. Instructions")
    print("3. High Scores")
    print("4. Exit")

while True:
    main_menu()
    choice = int(input("Choose an option: "))
    if choice == 1:
        game()
    elif choice == 2:
        instructions()
    elif choice == 3:
        display_high_scores()
    elif choice == 4:
        print("Exiting...")
        break
    else:
        print("Invalid option. Please try again.")
